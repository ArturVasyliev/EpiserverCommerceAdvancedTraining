@model CommerceTraining.Models.ViewModels.ProjectedShirtViewModel

@{
    ViewBag.Title = "Projection Result";
}

<h2>Projection Results</h2>
<p>You are looking for results for the text: @Model.SearchText</p>
<p>Total number of items in result: @Model.ResultCount</p>
<b>Results</b>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Brand</th>
            <th scope="col">Color</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Shirts)
        {
            <tr>
                <th scope="row">@Html.ContentLink(item.UrlLink)</th>
                <td>@item.Brand</td>
                <td>@item.Color</td>
            </tr>
        }
    </tbody>
</table>